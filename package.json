{
  "name": "@zcorky/koa-cluster",
  "version": "0.0.4",
  "description": "cluster for koa",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "bin": {
    "koa-cluster": "./bin/koa-cluster"
  },
  "repository": "https://github.com/zcorky/koa-cluster",
  "author": "Zero",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc && npm run gen:bin",
    "gen:bin": "mv ./lib/bin.js ./bin/koa-cluster && chmod +x ./bin/koa-cluster",
    "clean": "rimraf -rf lib",
    "test": "NODE_ENV=test nyc mocha test/*.spec.ts test/**/*.spec.ts --exit --timeout 10000",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "should": "^13.2.3",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^3.1.1"
  },
  "files": [
    "lib/",
    "bin/"
  ],
  "nyc": {
    "check-coverage": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@zcorky/delay": "^1.0.1",
    "@zcorky/lru": "^1.0.2",
    "commander": "^2.19.0"
  }
}
